{
  "name": "@spiritledsoftware/elisha",
  "version": "0.1.1",
  "description": "An OpenCode plugin for advanced AI-driven software development assistance.",
  "author": "Spirit-Led Software LLC <social@spiritledsoftware.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spiritledsoftware/elisha.git"
  },
  "keywords": [
    "opencode",
    "plugin",
    "ai",
    "agent",
    "assistant",
    "vibe-coding"
  ],
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build --target=bun --minify --splitting --sourcemap=linked --outdir=dist src/index.ts",
    "build:watch": "bun run build --watch",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "typecheck": "tsc --noEmit",
    "release": "bun run build && changeset publish",
    "prepare": "husky"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.27",
    "@opencode-ai/sdk": "^1.1.27",
    "dedent": "^1.7.1",
    "defu": "^6.1.4",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.6",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
