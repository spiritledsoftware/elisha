{
  "name": "@spiritledsoftware/elisha",
  "version": "0.5.0",
  "description": "An OpenCode plugin for advanced AI-driven software development assistance.",
  "keywords": [
    "agent",
    "ai",
    "assistant",
    "opencode",
    "plugin",
    "vibe-coding"
  ],
  "license": "MIT",
  "author": "Spirit-Led Software LLC <social@spiritledsoftware.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/spiritledsoftware/elisha.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run typecheck && bun run scripts/build.ts",
    "build:watch": "concurrently \"bun run typecheck:watch\" \"bun run --watch scripts/build.ts -- --watch\"",
    "clean": "rimraf dist",
    "clean-install": "rimraf bun.lock --glob **/node_modules && bun install",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "husky",
    "release": "bun run build && changeset publish",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsgo",
    "typecheck:watch": "tsgo --watch"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.36",
    "@opencode-ai/sdk": "^1.1.36",
    "defu": "^6.1.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.6",
    "@typescript/native-preview": "^7.0.0-dev.20260127.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "zod": "^4.3.6"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
