{
  "name": "@spiritledsoftware/elisha",
  "version": "0.5.0",
  "description": "An OpenCode plugin for advanced AI-driven software development assistance.",
  "author": "Spirit-Led Software LLC <social@spiritledsoftware.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spiritledsoftware/elisha.git"
  },
  "keywords": [
    "opencode",
    "plugin",
    "ai",
    "agent",
    "assistant",
    "vibe-coding"
  ],
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsgo && bun build --target=bun --minify --sourcemap=linked --outdir=dist src/index.ts",
    "build:watch": "concurrently \"bun run typecheck:watch\" \"bun build --target=bun --sourcemap=linked --outdir=dist --watch ./src/index.ts\"",
    "check": "biome check",
    "check:fix": "biome check --write",
    "clean": "rm -rf dist",
    "clean-install": "rimraf bun.lock --glob **/node_modules && bun install",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "prepare": "husky",
    "release": "bun run build && changeset publish",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsgo",
    "typecheck:watch": "tsgo --watch"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.34",
    "@opencode-ai/sdk": "^1.1.34",
    "defu": "^6.1.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.6",
    "@typescript/native-preview": "^7.0.0-dev.20260124.1",
    "bun": "^1.3.6",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "zod": "^4.3.6"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
